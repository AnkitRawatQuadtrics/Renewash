<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.SignUpFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ScrollViewCount">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/headerRl"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@color/blue">

                <ImageView
                    android:id="@+id/backButton"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/back_arrow"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:id="@+id/headerTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/sign_up"
                    android:textAllCaps="true"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <RelativeLayout
                    android:id="@+id/curve"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="-48dp"
                    android:background="@drawable/login_screen_white_curved_back" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/emailPasswordLinear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:layout_marginBottom="50dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/first_names"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    />

                <EditText
                    android:id="@+id/firstName"
                    style="@style/styleEditText"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_back"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/first_names"
                    android:inputType="textPersonName"
                    android:lines="1"
                    tools:ignore="Autofill,TextFields" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/last_names"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    />

                <EditText
                    android:id="@+id/lastName"
                    style="@style/styleEditText"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_back"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/last_names"
                    android:inputType="textPersonName"
                    android:lines="1"
                    tools:ignore="Autofill,TextFields" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/email_address"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    />

                <EditText
                    android:id="@+id/emailEditText"
                    style="@style/styleEditText"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_back"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/emails"
                    android:inputType="textEmailAddress"
                    android:lines="1"
                    tools:ignore="Autofill,TextFields" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/phone_number"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    />

                <EditText
                    android:id="@+id/phoneEditText"
                    style="@style/styleEditText"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_back"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/password"
                    android:inputType="phone"
                    android:lines="1"
                    tools:ignore="Autofill,TextFields" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/password"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    />

                <EditText
                    android:id="@+id/passwordEditText"
                    style="@style/styleEditText"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_back"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:lines="1"
                    tools:ignore="Autofill,TextFields" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/confirm_password"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    />

                <EditText
                    android:id="@+id/confirmPasswordEditText"
                    style="@style/styleEditText"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_back"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:lines="1"
                    tools:ignore="Autofill,TextFields" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/address"
                    android:textColor="@color/black"
                    android:textSize="16sp"

                    />

                <EditText
                    android:id="@+id/addressEditText"
                    style="@style/styleEditText"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/edittext_back"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="@string/address"
                    android:inputType="textPostalAddress"
                    android:lines="1"
                    tools:ignore="Autofill,TextFields" />

                <Button
                    android:id="@+id/signUpBtn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="50dp"
                    android:background="@drawable/appointment_type_back"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/sign_up"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/signInTexView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="20dp"
                    android:fontFamily="@font/poppins_medium"
                    android:text="@string/have_an_account_sign_in"
                    android:textAlignment="center"
                    android:textColor="@color/blue" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>